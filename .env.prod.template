# Production Environment Configuration Template
# Copy this file to .env.prod and fill in the actual values

# Environment
APP_ENV=production
FLASK_ENV=production

# Security - REQUIRED: Generate a strong secret key for production
SECRET_KEY=your-super-secret-production-key-here-change-this

# Database Configuration
# For SQLite (default):
DATABASE_URL=sqlite:///prod_data/users.db
# For PostgreSQL:
# DATABASE_URL=postgresql://username:password@localhost:5432/oak_tower_watcher
# For MySQL:
# DATABASE_URL=mysql://username:password@localhost:3306/oak_tower_watcher

# Server Configuration
HOST=0.0.0.0
PORT=8080

# SSL Configuration (for certbot)
DOMAIN_NAME=your-domain.com
SSL_EMAIL=your-email@domain.com

# Gunicorn Configuration
GUNICORN_WORKERS=4
GUNICORN_BIND=0.0.0.0:8080

# VATSIM Monitoring Configuration
CHECK_INTERVAL=30
AIRPORT_CODE=KOAK

# Pushover Notifications (optional)
PUSHOVER_API_TOKEN=your-pushover-api-token
PUSHOVER_USER_KEY=your-pushover-user-key

# Email Configuration (optional)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=true
MAIL_USE_SSL=false
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password

# Additional Production Settings
PYTHONUNBUFFERED=1
TZ=UTC