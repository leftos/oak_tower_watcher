# Production Environment Configuration for OAK Tower Watcher User Portal
# Copy this file to .env.prod and update the values

# Flask Configuration
SECRET_KEY=CHANGE-THIS-TO-A-SECURE-RANDOM-STRING-IN-PRODUCTION
FLASK_ENV=production
DEBUG=False

# Database Configuration
# For SQLite (default):
DATABASE_URL=sqlite:///instance/users.db
# For PostgreSQL (recommended for production):
# DATABASE_URL=postgresql://username:password@localhost/oakwatcher

# Server Configuration
HOST=0.0.0.0
PORT=8080

# Security Settings
WTF_CSRF_ENABLED=True
SESSION_COOKIE_SECURE=True
SESSION_COOKIE_HTTPONLY=True
SESSION_COOKIE_SAMESITE=Lax

# Optional: Email Configuration (for future password reset features)
# MAIL_SERVER=smtp.gmail.com
# MAIL_PORT=587
# MAIL_USE_TLS=True
# MAIL_USERNAME=your-email@gmail.com
# MAIL_PASSWORD=your-app-password

# Logging Level
LOG_LEVEL=INFO