# Production Environment Configuration for OAK Tower Watcher
# Copy this to .env and fill in your actual values

# Domain Configuration
DOMAIN_NAME=leftos.dev
SSL_EMAIL=admin@leftos.dev

# Pushover Configuration (Required for notifications)
PUSHOVER_API_TOKEN=your_pushover_api_token_here
PUSHOVER_USER_KEY=your_pushover_user_key_here

# Application Configuration
CHECK_INTERVAL=30
AIRPORT_CODE=KOAK
TZ=UTC

# Web Server Configuration
GUNICORN_WORKERS=4
GUNICORN_TIMEOUT=120
FLASK_ENV=production

# Database/Storage (if needed in future)
# DATABASE_URL=postgresql://user:pass@localhost/dbname

# Security Configuration
# SESSION_SECRET_KEY=your-secret-key-here

# Monitoring Configuration
# SENTRY_DSN=your-sentry-dsn-here

# Backup Configuration
# BACKUP_ENABLED=true
# BACKUP_SCHEDULE=0 2 * * *

# Resource Limits
NGINX_WORKER_PROCESSES=auto
NGINX_WORKER_CONNECTIONS=1024

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json

# Health Check Configuration
HEALTH_CHECK_INTERVAL=30s
HEALTH_CHECK_TIMEOUT=10s
HEALTH_CHECK_RETRIES=3