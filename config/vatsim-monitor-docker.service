[Unit]
Description=VATSIM Tower Monitor (Docker Compose)
Requires=docker.service
After=docker.service
StartLimitIntervalSec=0

[Service]
Type=oneshot
RemainAfterExit=yes
User=leftos
Group=leftos
WorkingDirectory=/home/leftos/oak_tower_watcher
ExecStart=/usr/bin/docker compose up -d
ExecStop=/usr/bin/docker compose down
TimeoutStartSec=0

[Install]
WantedBy=multi-user.target